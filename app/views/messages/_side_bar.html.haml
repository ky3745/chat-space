.side-bar
  .side-bar__side-header
    .side-bar__side-header__user-box
      .side-bar__side-header__user-box__user-name
        = current_user.name
      .side-bar__side-header__user-box__icon
        = link_to new_group_path, class: "new-group__btn" do
          %i.far.fa-edit
          %span<>
        = link_to edit_user_path(current_user), class: "edit-user__btn" do
          %i.fas.fa-cog
  %ul.group-list
    - current_user.groups.each do |group|
      %li.group
        = link_to group_messages_path(group) do
          %p.group__group-name
            = group.name
          %p.group__group-message
            = group.show_last_message